<image class="background-image" src="/images/background1.jpg"></image>

<cu-custom bgColor="bg-gradual-orange" isBack="{{false}}">
  <view slot="content">My Store Analyst</view>
</cu-custom>



<view class="container">



  <swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
    <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
      <view class="swiper-item">
        <image src="{{item.src}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
        <video src="{{item.src}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
      </view>
    </swiper-item>
  </swiper>






</view>









<view class="text-center margin-top">
  <text class="text-black text-xl">欢迎，</text>
  <text class="text-black text-xl">{{userID}} </text>
  <text class="text-black text-xl">你的身份是：店主</text>
</view>
<view class="cu-bar">
  <view class="action">

  </view>
</view>

<view class="padding-sm">
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-gradual-red animation-{{animation=='fade1'?'fade':''}} shadow round " data-class="fade1" bindtap="qujinhuo">
      <text class="cuIcon-goodsnew"></text>
      <text>去进货</text>
    </button>
  </view>
</view>


<view class="padding-sm">
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-gradual-red animation-{{animation=='fade2'?'fade':''}} shadow round " data-class="fade2" bindtap="xiaoshouchaxun">
      <text class="cuIcon-expressman"></text>
      <text>去销售</text>
    </button>
  </view>
</view>