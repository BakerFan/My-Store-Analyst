<cu-custom bgColor="bg-gradual-orange" isBack="{{true}}">
<view slot="backText">返回</view>
  <view slot="content">统计分析</view>
</cu-custom>

<image class="background-image" src="/images/background1.jpg"></image>


<view class="cu-form-group margin-top">
		<view class="title">商品名称</view>
		<picker bindchange="NameChange" value="{{nameIndex}}" range="{{name}}">
			<view class="picker">
				{{nameIndex?name[nameIndex]:'请选择商品名称'}}
			</view>
		</picker>
</view>



<view class="cu-form-group margin-top">
		<view class="title">图表类型</view>
		<picker bindchange="PickerChange" value="{{pickerIndex}}" range="{{picker}}">
			<view class="picker">
				{{pickerIndex?picker[pickerIndex]:'请选择图表类型'}}
			</view>
		</picker>
</view>

<view class="cu-form-group">
		<view class="title">起始日期</view>
		<picker mode="date" value="{{date1}}" start="2015-09-01" end="2020-09-01" bindchange="Date1Change">
			<view class="picker">
				{{date1}}
			</view>
		</picker>
</view>

<view class="cu-form-group">
		<view class="title">终止日期</view>
		<picker mode="date" value="{{date2}}" start="2015-09-01" end="2020-09-01" bindchange="Date2Change">
			<view class="picker">
				{{date2}}
			</view>
		</picker>
</view>

<view class="cu-bar bg-white margin-top">
  <view class="action">
    <text class="cuIcon-title text-red"></text>统计图
  </view>
</view>
<view class="bg-img bg-mask padding-tb-xl" style="background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg');height: 414rpx;">
  <view class="padding-xl text-white">
    <view class="padding-xs text-xl">
      我是统计图
    </view>
    <view class="padding-xs">
      Wo shi tong ji tu.
    </view>
  </view>
</view>

<view class="padding-sm">
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-gradual-red animation-{{animation=='scale1'?'scale-up':''}} shadow round "  data-class="scale1" bindtap="chakantongjitu">
    <text class="cuIcon-sort"></text>
    <text>查看统计图</text>
    </button>
  </view>
</view>