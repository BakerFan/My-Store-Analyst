<cu-custom bgColor="bg-gradual-orange" isBack="{{true}}">
<view slot="backText">返回</view>
  <view slot="content">销售情况查询</view>
</cu-custom>

<image class="background-image" src="/images/background1.jpg"></image>


<view class="container">
  <swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
  <swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
    <view class="swiper-item">
      <image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
      <video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
    </view>
  </swiper-item>
</swiper>
</view>

<view class="text-center margin-top">
  <text class="text-grey text-xl">{{motto}}</text>
</view>
<view class="cu-bar">
  <view class="action">
    
  </view>
</view>


<view class="padding-sm">
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-gradual-red animation-{{animation=='scale1'?'scale-up':''}} shadow round "  data-class="scale1" bindtap="chakanjilu">
    <text class="cuIcon-sort"></text>
    <text>销售记录</text>
    </button>
  </view>
</view>


<view class="padding-sm">
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-gradual-red animation-{{animation=='scale2'?'scale-up':''}} shadow round " data-class="scale2" bindtap="chakanfenxi">
    <text class="cuIcon-writefill"></text>
    <text>统计分析</text>
    </button>
  </view>
</view>